@model Application.Models.ApplicationGroup

@{
    ViewBag.Title = "刪除角色";
    Layout = "~/Views/Shared/_AdminLte3.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="text-danger">⚠️您確定要刪除角色  ?</h3>


                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover table-bordered">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="form-actions no-color">
                    <a class="btn btn-warning" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i>返回</a>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> 刪除</button>
                </div>
            </div>

        </div>
    </div>


}