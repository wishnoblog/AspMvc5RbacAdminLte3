@model IEnumerable<Application.Models.ApplicationRole>

@{
    ViewBag.Title = "權限管理";
    Layout = "~/Views/Shared/_AdminLte3.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <p>
                <a class="btn btn-primary" href="@Url.Action("Create")">
                    <i class="fas fa-plus"></i> 新增權限
                </a>
            </p>
            <div class="card">
                <div class="card-body">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    操作
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="300px">
                                        <a class="btn btn-default" href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-pen"></i> 編輯</a>
                                        <a class="btn btn-info" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-eye"></i> 詳情</a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i> 刪除</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
