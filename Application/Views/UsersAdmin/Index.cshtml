@model IEnumerable<Application.Models.ApplicationUser>

@{
    ViewBag.Title = "帳號管理";
    Layout = "~/Views/Shared/_AdminLte3.cshtml";
}


<div class="container-fluid">
    <p>
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="fas fa-plus"></i> 新增帳號
        </a>
    </p>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width:20%;min-width:280px">
                                   
                                </th>
                                <th>
                                    帳號
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-default" href="@Url.Action("Edit", new { id = item.Id })"><i class="fas fa-pen"></i> 編輯</a>
                                        <a class="btn btn-info" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-eye"></i> 詳情</a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i> 刪除</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>

                                </tr>
                            }
                        </tbody>

                        

                    </table>
                </div>
            </div>

        </div>
    </div>
</div>




